<div class="card">
  <div class="card-body">
    <h5 class="card-title">Title: <%=box.name%></h5>
    <p class='card-text'>Search terms:
      <%=box.search_terms%></p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">Gender:<%=box.gender || "none" %></li>
    <li class="list-group-item">Location:<%=box.address%></li>
    <li class="list-group-item">Keywords:<%=box.keywords%></li>
  </ul>
  <div class="card-body">
    <%=link_to "delete", customer_box_path(box), method: :delete%>
    |
    <%=link_to "edit", edit_customer_box_path(box)%>
    |
    <%=link_to "offers", customer_box_offers_path(box)%>
    |
    <%=link_to "completed offers", customer_box_completed_offers_path(box)%>
  </div>
</div>
