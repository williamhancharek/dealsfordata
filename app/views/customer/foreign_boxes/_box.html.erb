<div class="card" style="border-width: 9px; border-style: solid;
  border-color:#<%=box.background%>">
  <div class="card-body">
    <h3 class="card-title">
      <%=box.name%></h3>
    <p class='card-text'>Search terms:
      <%=box.search_terms%></p>
  </div>
  <div class="card-body">
    <%if (@box.subscribed?(box) == true)%>
      <%=link_to "unfollow", customer_subscription_path(Subscription.find_by(:subscribing_id => box.id, :subscriber_id => @box.id)), method: :delete%>
    <%else%>
      <%=link_to "follow", customer_subscriptions_path(subscribing_id: box, subscriber_id: @box.id), method: :post%>
    <%end%>
    |
    <%=link_to "see subscribers", customer_box_subscriptions_path(box, "subscribers")%>
    |
    <%=link_to "see subscriptions", customer_box_subscriptions_path(box, "subscribing")%>
    |
    <%=link_to "completed offers", customer_box_completed_offers_path(box)%>


    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#availableOffersModal">
      available offers
    </button>
    <div class="modal fade" id="availableOffersModal" tabindex="-1" role="dialog" aria-labelledby="availableOffersModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="availableOffersModalLabel">Offers</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body"></div>
        </div>
      </div>
    </div>

  </div>
</div>
