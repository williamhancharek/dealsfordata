<div class="container-sm mx-auto">
  <div class="card">
    <%if offer.image.attached?%>
      <%if offer.image.variable?%>
        <%=image_tag(offer.image.variant(resize_to_limit: [400,400]), class:"rounded mx-auto d-block card-img-top")%>
      <%else%>
        <p>image attached but can't be shown</p>
      <%end%>
    <%else%>
      <p> no image attached</p>
    <%end%>
    <div class="card-body">
      <h3 class="card-title"><%=offer.title%></h3>
      <p class="card-subtitle text-muted">Offered by:
        <%=offer.merchant_name%></p>
      <p class='card-text'><%=offer.description%></p>
      <%= referralInfo(offer: offer)%>
      <%= simple_form_for(offer, url: customer_offer_path(offer.id)) do |f| %>
      <div class = "form-group">
        <%=f.input :selected_option,
                  as: :radio_buttons,
                  collection: offer.options,
                  required: true,
                  wrapper_html: {class:"form-check-inline"}%>
      </div>
      <%= sendOffer(offer: offer, f: f) %>
      <%=f.input :commentary,
                  label: "feedback"%>
      <%= f.button :submit, "select", class:["btn-sm", "btn-w-m btn-primary"] %>
    <%end%>
  </div>
</div>
</div>
