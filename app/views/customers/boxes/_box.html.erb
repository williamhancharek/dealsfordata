<div class="card">

    <table class="table table-sm table-borderless m-1">
      <tr>
        <th width="40px">Request</th>
        <td class="text-left"><%=box.name%></td>
      </tr>
      <tr>
        <th>Priority</th>
        <td><%=box.priority.present? ? box.priority : "not stated"%></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%=box.price_range%>
        </td>
      </tr>
      <tr>
        <th>Notes</th>
        <td><%=truncate(box.search_terms,length: 30)%>
          <%if box.search_terms.length > 30 %>
            <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-content="<%=box.search_terms%>">
              more
            </a>
          <%end%>
        </td>

      </tr>
      <tr>
        <td></td>
        <td>
          <%=link_to "history", customer_box_offers_path(box)%>
        </td>
        </tr>

    </table>

  <div class="card-footer panel-custom">
    <div data-controller="responder">


          <input data-target="responder.comment" type="text" placeholder="add a message" style="width:100%;">
          <input data-target="responder.link" type="text" placeholder="submit a link" style='width:100%;'>

          <button data-action="click->responder#recommend", class="btn btn-sm text-white font-weight-bold" style="background-color: <%=["#FF89C0", "#FFA4A5", "#FFC385"][rand(0..2)]%>;" >
            send
          </button>


      <span data-target="hello.output"></span>
    </div>
  </div>
</div>
