<%=simple_form_for(@box, url: customer_box_path) do |f|%>
<%=f.input :name, label: "Name your request", presence: true, wrapper_html: {class: "form-group row"}, label_html: {class: "col-3 col-form-label"}, input_html: {class: "col-9 form-control"}%>
<%=f.input :search_terms, label: "Make a request", presence: true, wrapper_html: {class: "form-group row"}, label_html: {class: "col-3 col-form-label"}, input_html: {class: "col-9 form-control"}%>
<%# <%=f.input :public, as: :boolean, checked_value: "true", unchecked_value: "false"%>
<%=f.input :allow_email, as: :boolean, checked_value: true, unchecked_value: false, value: @box.allow_email%>

<%=f.button :submit, class: "btn, btn-dark"%>
<%end%>
