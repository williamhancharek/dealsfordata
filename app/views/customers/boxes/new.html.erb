<%=render partial: "partials/crumb", locals: {active: "new", passive: [link_to("home", customer_boxes_path), link_to("#{@box.name}", customer_box_path(@box.id))]}%>customer new box file #depecrated

<%=simple_form_for @box, url:customer_boxes_path do |f| %>
<%=f.input :name,
            label: "Name Your Box",
            presence: true,
            wrapper_html: {class: "form-group row"},
            label_html: {class: "col-sm-2 col-form-label"},
            input_html: {class: "col-sm-10 form-control"}%>
<%=f.input :search_terms,
            presence: true,
            wrapper_html: {class: "form-group row"},
            label_html: {class: "col-sm-2 col-form-label"},
            input_html: {class: "col-sm-10 form-control"} %>
<%=f.input :allow_email,
            as: :boolean,
            checked_value: true,
            unchecked_value: false%>
<%=f.input :public,
            as: :boolean,
            checked_value: "true",
            unchecked_value: 'false',
            label: "make box public"%>
<%= f.button :submit, "submit", class:["btn-sm", "btn-w-m btn-primary"]%>
<%end%>
