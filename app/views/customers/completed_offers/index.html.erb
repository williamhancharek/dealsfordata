<div class="row">
  <div class="col-2">
    <ul class="nav flex-column nav-pills nav-stacked">
      <li class="nav-item">
        <%=link_to "Offers", customer_box_offers_path(@box), html_options = {class: "nav-link active"}%>
      </li>
      <li class="nav-item">
        <%=link_to "Archived", customer_box_completed_offers_path(@box), html_options = {class: "nav-link"}%>
      </li>
      <%if @box.public?%>
        <li class="nav-item">
          <%=link_to "Followers", customer_box_subscribers_path(box_id: @box.id), html_options = {class: "nav-link"}%>
        </li>
      <%else%>
        <li class="nav-item">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Followers</a>
        </li>
      <%end%>
      <li class="nav-item">
        <%=link_to "Following", customer_box_subscriptions_path(box_id: @box.id), html_options = {class: "nav-link"}%>
      </li>
      <li class="nav-item">
        <%=link_to "Settings", edit_customer_box_path(@box), html_options = {class: "nav-link"}%>
      </li>
    </ul>
  </div>
  <div class="col-10">
    <%= render partial: "customer_completed_offer", collection: @completed_offers, as: :offer%>
  </div>
</div>
