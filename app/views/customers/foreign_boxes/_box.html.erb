<div class="card" style="border-width: 9px; border-style: solid;
  border-color:#<%=box.background%>">
  <div class="card-body">
    <h3 class="card-title">
      <%=box.name%></h3>
    <p class='card-text'>Search terms:
      <%=box.search_terms%></p>
  </div>
  <div class="card-body">
    <%if (@box.subscribed?(box) == true)%>
      <%=link_to "unfollow", customer_subscription_path(Subscription.find_by(:subscribing_id => box.id, :subscriber_id => @box.id)), method: :delete, remote: :true%>
    <%else%>
      <%=link_to "follow", customer_subscriptions_path(subscribing_id: box, subscriber_id: @box.id), method: :post, remote: :true%>
    <%end%>
    |
    <%=link_to "see subscriptions", customer_box_foreign_subscriptions_path(box_id: box.id, originating_box_id: @box.id)%>
    |
    <%=link_to "completed offers", customer_box_completed_offers_path(box)%>
  </div>
</div>
