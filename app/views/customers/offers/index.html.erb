<%=render partial: "partials/crumb", locals: {active: @box.name, passive: [link_to("Home", customer_boxes_path)]}%>
  <div class="row">
  <%=render partial: "partials/horizontal_box_tabs", locals: {box: @box, active: "offer"}%>
  <%=render partial: "partials/box_tabs", locals: {box: @box, active: "offer"}%>

    <div class='col-2 d-none d-md-block'></div>
    <div class='col-3 d-md-none'></div>
    <div class='col-6'>
      <h2 class="text-center font-weight-bold">Offers available for you</h2>
      <p class="text-center font-weight-light">Based on your feedback and comments, our algorithm will learn your preferences and send you more relevant offers.</p>
      <p class="text-center font-weight-bold">
        <%if @approved_count.zero?%>
        No offers available
        <%else%>
        Offer 1 of <%=@approved_count%>
      <%end%>
    </p>
    <%= ShowApprovedOffer(offer: @offer)%>
    <p></p>
    <p class="text-center font-weight-bold">
      <%if @approved_count.zero?%>
      <%else%>
      Offer 1 of <%=@approved_count%>
      <%end%>
    </p>
    </div>
    <div class='col-3 d-md-none'></div>
    <div class='col-2 d-none d-md-block'></div>
</div>
