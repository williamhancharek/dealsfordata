<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item small" aria-current="page"><%=link_to "Home", customer_boxes_path%></li>
    <li class="breadcrumb-item small" aria-current="page"><%=link_to @box.name, customer_box_path(@box)%></li>
    <li class="breadcrumb-item active small" aria-current="page">offers</li>
  </ol>
</nav>
<% if @box.public?%>
  <%=link_to "make your own offer", new_customer_box_offer_path(@box)%>
<%end%>
<div class="container">
  <div class="row">
    <div class='col'></div>
    <div class='col-6'>
      <h2 class="text-center font-weight-bold">Offers available for you</h2>
      <p class="text-center font-weight-light">Based on your feedback and comments, our algorithm will learn your preferences and send you more relevant offers.</p>
      <p class="text-center font-weight-bold">
        <%if @approved_count.zero?%>
        No offers available
        <%else%>
        Offer 1 of <%=@approved_count%>
      <%end%>
    </p>
    </div>
    <div class='col'></div>
  </div>
  <div class="row">
    <div class='col'></div>
    <div class='col-6'>
      <%= ShowApprovedOffer(offer: @offer)%>
    </div>
    <div class="col"></div>
  </div>
  <div class="row">
    <div class='col'></div>
    <div class='col-6'>
      <p></p>
      <p class="text-center font-weight-bold">
        <%if @approved_count.zero?%>
        <%else%>
        Offer 1 of <%=@approved_count%>
      <%end%>
    </p>
    </div>
    <div class="col"></div>
  </div>

  <div class='col'></div>
</div>
