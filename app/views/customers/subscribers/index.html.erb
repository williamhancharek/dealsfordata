<%=render partial: "partials/crumb", locals: {active: "Subscribers", passive: [link_to("Home", customer_boxes_path), link_to(@box.name, customer_box_path(@box))]}%>

<div class="row">
  <%=render partial: "partials/box_tabs", locals: {box: @box, active: "follower"}%>
  <%if @box.subscribers.empty?%>
    <div class='col-1'></div>
    <div class='col-6'>
      <%if @box.public?%>
        <p class="text-center font-weight-bold"><%=link_to "send offer to your followers", new_customer_box_offer_path(@box)%></p>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModal">
  send offer to followers
</button>
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
      <%end%>
      <h2 class="text-center font-weight-bold">you have no subscribers</h2>
    </div>
    <div class="col-3"></div>
  <%else%>
    <div class="col-10">
      <table>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>address</th>
          <th>search terms</th>
          <th>key words</th>
        </tr>
        <%=render partial: "box", collection: @subscribers, as: :box%>
      </table>
    </div>
  <%end%>
</div>
