<%=render partial: "partials/crumb", locals: {active: @box.name, passive: [link_to("Home", customer_boxes_path)]}%>

<div class="row">
  <%=render partial: "partials/horizontal_box_tabs", locals: {box: @box, active: "following"}%>
  <%=render partial: "partials/box_tabs", locals: {box: @box, active: "following"}%>

  <%if @box.subscribing.empty?%>
    <div class='col-2 d-none d-md-block'></div>
    <div class='col-3 d-md-none'></div>
    <div class='col-6'>
      <h2 class="text-center font-weight-bold"><%=link_to "Find some boxes to follow!", customer_box_foreign_boxes_path(@box)%></h2>
      <p class="text-center font-weight-light">Follow boxes to get the same offers as other boxes.</p>

    </div>
    <div class='col-3 d-md-none'></div>
    <div class='col-2 d-none d-md-block'></div>
  <%else%>
    <div class="col">
      <div class="text-center">
        <%= button_to "follow boxes", customer_box_foreign_boxes_path(@box), :method => :get, :class => "btn btn-primary btn-sm font-weight-bold m-1" %>
      </div>

      <table class="table">
        <thead>
        <tr>
          <th scope="col">Box Name</th>
          <th scope="col">search terms</th>
          <th scope="col">Actions</th>
        </tr>
        </thead>
        <%=render partial: "box", collection: @subscriptions, as: :box%>
      </table>
    </div>
  <%end%>
</div>
