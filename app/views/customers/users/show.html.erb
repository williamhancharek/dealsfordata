<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item small" aria-current="page"><%=link_to "Home", customer_boxes_path%></li>
        <li class="breadcrumb-item active small" aria-current="page">Profile</li>
  </ol>
</nav>


<h1>customer show page</h1>

<div class="row">
  <div class="col-sm-6">
    <div class="card mb-3">
      <div class="row no-gutters">
        <div class="col-md-4">
          <%= image_tag(current_user.identicon, class:"card-img") %>
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h5 class="card-title">Your Account Details</h5>
            <p class='card-text'><%=link_to "Change password", edit_user_registration_path %></p>
            <p class='card-text'>
            <%=simple_form_for(@user, url: customer_user_path) do |f|%>
              <%=f.input :allow_email, as: :radio_buttons, collection: [true, false]%>
              <%=f.button :submit%>
            <%end%></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
