employee new offer page

<%= simple_form_for(@offer, method: :post, url: employee_offers_path) do |f| %>
<%=f.input :title%>
<%=f.input :description%>
<%=f.input :tags%>
<%=f.input :options, collection: [['question', ['yes', 'no', 'no answer', 'spam']],
                                  ['coupon', ['purchase', 'ew', 'not now', 'is it worth?']],
                                  ['advertisement',['useful', 'not useful', 'spam', 'already seen']]]%>
<%=f.input :image%>
<%=f.input :customer_id, collection: @customer_emails%>
<%=f.input :merchant_id, collection: @merchant_emails%>
<%=f.button :submit%>
<% end %>
