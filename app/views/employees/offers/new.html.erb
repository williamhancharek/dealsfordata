<%= simple_form_for(@offer, method: :post, url: employee_offers_path) do |f| %>
<%=f.input :title, presence: true%>
<%=f.input :description, presence: true%>
<%=f.input :tags%>
<%=f.input :options, presence: true,
                      required: true,
                        collection: [['question', ['yes', 'no', 'no answer', 'spam']],
                                  ['coupon', ['purchase', 'ew', 'not now', 'is it worth?']],
                                  ['advertisement',['useful', 'not useful', 'spam', 'already seen']]]%>
<%=f.input :image%>
<%=f.input :box_id, label:"box",
                    collection: @boxes%>
<%f.input :campaign_id, label:"campaign",
                         collection: @campaign_name%>
<%=f.button :submit%>
<% end %>
