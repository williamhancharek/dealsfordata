<div class="col">
  <div class="accordion" id="accordion<%=box.id%>">
    <div class="card">
      <div class="card-body">
        <table class="table table-sm">
          <tr>
            <th>Request</th>
            <td><%=box.name%></td>
          </tr>
          <tr>
            <th>Priority</th>
            <td><%=box.priority.present? ? box.priority : "not stated"%></td>
          </tr>
          <tr>
            <th>Price</th>
            <td><%=box.price_range%>
            </td>
          </tr>
          <tr>
            <th>Notes</th>
            <td><%=truncate(box.search_terms,length: 50)%>
              <%if box.search_terms.length > 50 %>
                <a tabindex="0" role="button" data-toggle="popover" data-trigger="focus" data-content="<%=box.search_terms%>"> more </a>
                <%end%>
            </td>

          </tr>
        </table>
        <%=link_to "history", customer_foreign_box_path(box)%>
      </div>
      <div class="card-body">
        <table>
          <%=render partial: "offer", collection: box.offers.select{|t| t.image.present?}%>
        </table>
      </div>
      <div class="card-footer">
        <div class="btn-block">
          <button class="btn btn-primary btn-block " type="button" data-toggle="collapse" data-target="#collapse<%=box.id%>" aria-expanded="true" aria-controls="collapseOne">
            respond
          </button>
        </div>

        <div id="collapse<%=box.id%>" class="collapse" aria-labelledby="headingOne" data-parent="#accordion<%=box.id%>">
          <div data-controller="responder">
            <input data-target="responder.comment" type="text" , placeholder="add a comment">
            <input data-target="responder.link" type="text" , placeholder="submit a link">

            <button data-action="click->responder#recommend">
              submit
            </button>

            <span data-target="hello.output"></span>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
