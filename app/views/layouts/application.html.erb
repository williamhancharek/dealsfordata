<!DOCTYPE html>
<html>
  <head>
    <title>Dealsfordata</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://fonts.googleapis.com/css?family=Quicksand:500&display=swap" rel="stylesheet">

    <script type="text/javascript">
      window.$crisp = [];
      window.CRISP_WEBSITE_ID = "7de81187-39b3-4a29-b534-a81ec5395b69";
      (function () {
        d = document;
        s = d.createElement("script");
        s.src = "https://client.crisp.chat/l.js";
        s.async = 1;
        d.getElementsByTagName("head")[0].appendChild(s);
      })();
    </script>

  </head>

  <body>
    <div class="row" style="padding-top: 20px;">
    </div>

    <div class="container-fluid">
      <div class="row">
        <div class="d-xl-none">
          <%=horizontaltabsorter(active: @active, box:@new_box)%>
        </div>
        <div class="col-3 d-none d-xl-block">
          <%=tabsorter(active: @active, box:@new_box)%>
        </div>
        <div class="col">
          <div class="d-xl-none row" style="padding-top: 100px;">
          </div>
          <div class="d-none d-xl-block row" style="padding-top: 50px;">
          </div>
          <%= render "layouts/messages" %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
