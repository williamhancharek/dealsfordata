<tr>
  <td><%=offer.title%></td>
  <td><%=offer.image.attached? ? image_tag(offer.image.variant(resize_to_limit: [100,100]), class:"card-img") : nil %></td>
  <td><%=offer.description%></td>
  <td><%=offer.tags%></td>
  <td><%=offer.options%></td>

  <td><%= simple_form_for(offer, url: moderator_offer_path(offer)) do |f| %>
    <%=f.input :approved, as: :radio_buttons, label: ""%>
    <%=f.submit%>
    <%end%></td>
    <td><%=link_to "offer show page", moderator_offer_path(offer)%></td>
<td><%=link_to "delete the offer", moderator_offer_path(offer), method: :delete%>
</tr>
